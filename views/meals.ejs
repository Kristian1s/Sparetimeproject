<!DOCTYPE html>
<html>

<head>
  <title> Meals</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel='stylesheet' href='../stylesheets/style.css'/>
  <script type="text/javascript" src="../javascripts/deleteMeal.js"></script>

</head>

<body>
  <%- include('./partials/navbar.ejs')%>
    <div class="container-fluid mt-5">
      <h2 class="p-3 text-center">Meals</h2>
      <div class="list-group">
        <div class="row px-3 py-1 w-100">
      
          <% if (locals.isAuthenticated) { %>
            <span class="col py-1 bg-light">
              <span class="col py-1">Id</span>
              </span>
                <%}%>
         
          <span class="col py-1">Name</span>
          <span class="col py-1">Type</span>
          <span class="col py-1">Calories</span>
          <span class="col py-1">Protein (g)</span>
          <% if (locals.isAuthenticated) { %>
            <span class="col py-1"></span> 
            <%}%>
          
          
        </div>
        <% meals.forEach(function(meal) { %>
          <div class="row px-3 py-1 w-100">
            <!-- TODO   ID should only be visible for an admin that needs to delete meals -->
            <% if(locals.isAuthenticated){%>
            <span class="col py-1 bg-light ">
              <%=meal.id%>
            </span>
            <%}%>
        
            <span class="col py-1 bg-light">
              <%=meal.Name%>
            </span>
            <span class="col py-1 bg-light">
             
              <%=meal.Type.Name%>
          
            </span>
            <span class="col py-1 bg-light">
              <%=meal.Calories%>
            </span>
            <span class="col py-1 bg-light">
              <%=meal.Protein%> 
            </span>
            <% if (locals.isAuthenticated) { %>
            <span class="col py-1 bg-light">
                <button class="btn btn-danger" id="Meal" onclick="deleteMeal('/meals',<%=meal.id%>)">Delete meal</button>
              </span>
              <%}%>
              
          
          
        </div>
            <%})%>


            <% if (locals.isAuthenticated) { %>
              <div>
                <button class="btn btn-success" id="Meal" onclick="addMeal('/meals')">Add new meal</button>
                
              </div>
                <%}%>
       
       
      
           
    
    </div>
    
</body>

</html>

