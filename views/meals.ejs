<!DOCTYPE html>
<html>

<head>
  <title> Meals</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel='stylesheet' href='../stylesheets/style.css'/>
  <script type="text/javascript" src="../javascripts/addMeal.js"></script>

</head>

<body>
  <%- include('./partials/navbar.ejs', {user: user})%>
    <div class="container-fluid mt-5">
      <h2 class="p-3 text-center">Meals</h2>
      <div class="list-group">
        <div class="row px-3 py-1 w-100">
          <span class="col py-1">Id</span>
          <span class="col py-1">Name</span>
          <span class="col py-1">Type</span>
          <span class="col py-1">Calories</span>
          <span class="col py-1">Protein (g)</span>
        </div>
        <% meals.forEach(function(meal) { %>
          <div class="row px-3 py-1 w-100">
            <!-- ID should only be visible for an admin that needs to delete meals -->
            <span class="col py-1 bg-light ">
              <%=meal.id%>
            </span>
            <span class="col py-1 bg-light">
              <%=meal.Name%>
            </span>
            <span class="col py-1 bg-light">
             
              <%=meal.Type.Name%>
          
            </span>
            <span class="col py-1 bg-light">
              <%=meal.Calories%>
            </span>
            <span class="col py-1 bg-light">
              <%=meal.Protein%> 
            </span>
          </div>
            <%})%>
          
        <div>
          <button class="btn btn-success" id="addMeal" onclick="addMeal('/meals')">Add new meal</button>
        </div>
       
      
           
    
    </div>
    
</body>

</html>